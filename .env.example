# Documentation Analyzer Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Claude API Configuration (Optional)
# ============================================
# The analyzer can run WITHOUT an API key, but will skip AI-powered analysis
# Get your API key from: https://console.anthropic.com/

ANTHROPIC_API_KEY=

# ============================================
# Analysis Configuration
# ============================================
# Enable or disable AI-powered analysis
# Set to 'false' to run without API key (faster, less comprehensive)
# Set to 'true' to enable AI semantic analysis (requires API key above)
ENABLE_AI_ANALYSIS=true

# Claude model to use for analysis
# Options:
#   claude-3-5-haiku-20241022 (budget-friendly: ~$0.14 for 60 files)
#   claude-sonnet-4-5-20250929 (recommended: ~$0.54 for 60 files)
#   claude-3-5-sonnet-20241022 (alternative Sonnet)
#   claude-opus-4-20250514 (highest quality: ~$2.68 for 60 files)
CLAUDE_MODEL=claude-3-5-haiku-20241022

# Maximum tokens for AI analysis per request
# Increased to 4000 for detailed evidence-based analysis with before/after examples
AI_MAX_TOKENS=4000

# ============================================
# Repository Configuration
# ============================================
# Default documentation path (can be overridden via CLI)
DOCS_PATH=./docs

# Repository type: auto, mintlify, docusaurus, mkdocs, generic
REPO_TYPE=auto

# ============================================
# Remote Repository (Optional)
# ============================================
# Enable cloning and analyzing remote repositories
ENABLE_REMOTE_CLONE=false

# GitHub token for private repositories (optional)
GITHUB_TOKEN=

# ============================================
# Output Configuration
# ============================================
# Default output format: json, html, markdown, all
DEFAULT_OUTPUT_FORMAT=html

# Output directory for reports
OUTPUT_DIR=./reports

# ============================================
# Performance Configuration
# ============================================
# Number of parallel threads for analysis
PARALLEL_THREADS=4

# Enable content duplication detection
ENABLE_DUPLICATION_DETECTION=true

# Similarity threshold for duplication (0.0-1.0)
DUPLICATION_THRESHOLD=0.8
